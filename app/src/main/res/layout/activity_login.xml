<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.agora.tutorials.activity.LoginActivity">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_back" />

    <LinearLayout
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:background="@mipmap/login_icon"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="107.5dp"
            android:background="@null"
            android:hint="@string/input_mobile"
            android:textColor="#ffb5b5b5"
            android:textSize="15sp" />
        <View
            android:layout_marginLeft="21dp"
            android:background="#fff6f6f6"
            android:layout_marginTop="17dp"
            android:layout_width="319.5dp"
            android:layout_height="0.5dp"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="51.5dp"
            android:background="@null"
            android:hint="@string/input_password"
            android:inputType="textPassword"
            android:textColor="#ffb5b5b5"
            android:textSize="15sp" />
        <View
            android:layout_marginLeft="21dp"
            android:background="#fff6f6f6"
            android:layout_marginTop="17dp"
            android:layout_width="319.5dp"
            android:layout_height="0.5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login"
            android:textColor="#ffa45c24"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>
