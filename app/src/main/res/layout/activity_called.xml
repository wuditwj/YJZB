<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#636363"
    android:orientation="vertical"
    tools:context="io.agora.tutorials.activity.CalledActivity">


    <io.agora.tutorials.utils.RoundAngleImageView
        android:id="@+id/client_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="178dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22.2dp"
        android:textColor="#ffa0a0a0"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13.5dp"
        android:text="@string/call_invite"
        android:textColor="#ffefd8b3"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="166.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hang_up"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hang_up" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#ffa0a0a0"
                android:textSize="14sp"
                android:text="@string/call_hang_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer"
            android:layout_marginLeft="97.5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/answer" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#ffa0a0a0"
                android:textSize="14sp"
                android:text="@string/call_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
