<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context="io.agora.tutorials.activity.FormActivity"
    android:paddingBottom="19dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/form_back" />

        <!--标题栏样式一-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@android:color/white"
            app:subtitleTextColor="@android:color/white"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="@string/form_title"
            app:titleTextColor="@android:color/background_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="147dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="19dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingBottom="14.5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:text="@string/form_client_screen_name"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/form_client_screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="31dp"
                    android:background="@null"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="225dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/form_client_mobile"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/form_client_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/form_client_sex"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/form_sex_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/form_rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:checked="true"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="#313131"
                        android:textSize="14sp"/>

                    <RadioButton
                        android:id="@+id/form_rb_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="18dp"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="#313131"
                        android:textSize="14sp"/>

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/form_car_type"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/form_car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:textTint="#000000" />

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/form_client_level"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/form_client_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    app:textTint="#000000" />

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/form_test_drive"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/form_drive_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/form_rb_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:checked="true"
                        android:gravity="center"
                        android:text="是"
                        android:textColor="#313131"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/form_rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="18dp"
                        android:gravity="center"
                        android:text="否"
                        android:textColor="#313131"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginLeft="21.5dp"
                android:layout_marginTop="12dp"
                android:background="#ffeeeeee" />

            <LinearLayout
                android:id="@+id/layout_cause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/form_cause"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/form_cause"
                    android:layout_width="225dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_background"
                    android:gravity="top"
                    android:minLines="5" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36.5dp">

                <ImageView
                    android:id="@+id/form_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/form_commit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/form_commit"
                    android:textColor="#ffa45c24"
                    android:textSize="17sp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
