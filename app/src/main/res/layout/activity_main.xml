<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <!--    主页内容-->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background">

            <!--    标题栏    -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <!--模拟状态栏占位-->
                <View
                    android:id="@+id/view_statusbar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--标题栏样式一-->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/back"
                    app:layout_constraintTop_toBottomOf="@+id/view_statusbar"
                    app:subtitleTextColor="@android:color/white"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/id_show_text"
                android:layout_below="@id/con_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125.5dp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffa45c24"
                android:text="@string/device_disconnect"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_below="@+id/id_show_text"
                android:src="@mipmap/call_on"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/show_mute"
                android:layout_below="@id/iv_mute"
                android:layout_marginTop="29dp"
                android:textSize="18sp"
                android:textColor="#FFEFD8B3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </FrameLayout>
    <!--    主页内容-->

    <!--侧边栏内容-->
    <FrameLayout
        android:id="@+id/menu_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/activity_left_menu" />
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>

