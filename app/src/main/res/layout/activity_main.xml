<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_bg">

    <!--    主页内容-->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <!--    标题栏    -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/con_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <!--模拟状态栏占位-->
                <View
                    android:id="@+id/view_statusbar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--标题栏样式一-->
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/view_statusbar"
                    app:subtitleTextColor="@android:color/white"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:title=""
                    app:titleTextColor="@android:color/white" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/show_mute"
                android:layout_below="@id/con_layout"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/id_show_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_mute"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="@string/device_disconnect"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/id_showInfo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:textSize="18sp" />


        </RelativeLayout>
    </FrameLayout>
    <!--    主页内容-->

    <!--侧边栏内容-->
    <FrameLayout
        android:id="@+id/menu_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/activity_left_menu" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>

