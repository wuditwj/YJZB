<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_background" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14.5dp">

        <TextView
            android:id="@+id/form_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:text="@string/list_form_drive"
            android:textColor="@color/form_title"
            android:textSize="@dimen/list_form_item_name" />

        <TextView
            android:id="@+id/form_list_item_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="121.5dp"
            android:text="@string/list_form_drive"
            android:textColor="@color/form_title"
            android:textSize="@dimen/list_form_item_name" />

        <TextView
            android:id="@+id/form_list_item_drive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="266dp"
            android:text="@string/list_form_drive"
            android:textColor="@color/form_title"
            android:textSize="@dimen/list_form_item_name" />

    </RelativeLayout>

</LinearLayout>